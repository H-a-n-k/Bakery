@model IEnumerable<Bakery.Models.KhuyenMai>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách khuyến mãi</h2>

<button type="button" class="btn btn-primary mt-3 mb-3">@Html.ActionLink("Tạo mới", "Create")</button>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenKM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TiLeKM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayBD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayKT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pr_img)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenKM)
        </td>
        <td>
            @(item.TiLeKM * 100) %
        </td>
        <td>
            @item.NgayBD.Value.ToShortDateString()
        </td>
        <td>
            @item.NgayKT.Value.ToShortDateString()
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.pr_img)" width="150" height="150" />
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaKM }) |
            @Html.ActionLink("Xem", "Details", new { id=item.MaKM }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaKM })
        </td>
    </tr>
}

</table>
