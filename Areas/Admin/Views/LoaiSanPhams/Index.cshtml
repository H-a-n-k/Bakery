@model IEnumerable<Bakery.Models.LoaiSanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách loại sản phẩm</h2>

<button type="button" class="btn btn-primary mt-3 mb-3">@Html.ActionLink("Tạo mới", "Create")</button>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenLoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cate_img)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenLoai)
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.cate_img)" width="100" height="100"/>
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaLoai }) |
            @Html.ActionLink("Xem", "Details", new { id=item.MaLoai }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaLoai })
        </td>
    </tr>
}

</table>
