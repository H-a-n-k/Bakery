@model IEnumerable<Bakery.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách sản phẩm</h2>

<button type="button" class="btn btn-primary mt-3 mb-3">@Html.ActionLink("Tạo mới", "Create")</button>

<table class="table">
	<tr class="table-info row">
		<th class="col-1">
			@Html.DisplayNameFor(model => model.img)
		</th>
		<th class="col-2">
			@Html.DisplayNameFor(model => model.TenSP)
		</th>
		<th class="col-1">
			@Html.DisplayNameFor(model => model.GiaSP)
		</th>
		<th class="col-2">
			@Html.DisplayNameFor(model => model.MotaSP)
		</th>
		<th class="col-1">
			@Html.DisplayNameFor(model => model.Sao)
		</th>
		<th class="col-1">
			@Html.DisplayNameFor(model => model.SoLuotDanhGia)
		</th>
		<th class="col-1">
			@Html.DisplayNameFor(model => model.SoluongSP)
		</th>
		<th class="col-1">
			@Html.DisplayNameFor(model => model.tinhTrang)
		</th>
		<th class="col-1">
			@Html.DisplayNameFor(model => model.LoaiSanPham.TenLoai)
		</th>
		<th class="col-1"></th>
	</tr>

@foreach (var item in Model) {
	<tr class="row">
		<td class="col-1">
			<img src="@item.img" style="width: 100%; aspect-ratio: 1/1" />
		</td>
		<td class="col-2">
			@Html.DisplayFor(modelItem => item.TenSP)
		</td>
		<td class="col-1">
			@string.Format("{0:N0}", item.GiaSP) đ
		</td>
		<td class="col-2">
			@Html.DisplayFor(modelItem => item.MotaSP)
		</td>
		<td class="col-1">
			@item.Sao.ToString("#.#")
		</td>
		<td class="col-1">
			@Html.DisplayFor(modelItem => item.SoLuotDanhGia)
		</td>
		<td class="col-1">
			@Html.DisplayFor(modelItem => item.SoluongSP)
		</td>
		<td class="col-1">
			@(item.tinhTrang.HasValue && item.tinhTrang.Value == 1 ? "Đang bán" : "Ẩn")
		</td>
		<td class="col-1">
			@Html.DisplayFor(modelItem => item.LoaiSanPham.TenLoai)
		</td>
		<td class="col-1">
			<a href="@Url.Action("Edit", new { id = item.MaSP })">
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="icon">
					<path d="M471.6 21.7c-21.9-21.9-57.3-21.9-79.2 0L362.3 51.7l97.9 97.9 30.1-30.1c21.9-21.9 21.9-57.3 0-79.2L471.6 21.7zm-299.2 220c-6.1 6.1-10.8 13.6-13.5 21.9l-29.6 88.8c-2.9 8.6-.6 18.1 5.8 24.6s15.9 8.7 24.6 5.8l88.8-29.6c8.2-2.7 15.7-7.4 21.9-13.5L437.7 172.3 339.7 74.3 172.4 241.7zM96 64C43 64 0 107 0 160V416c0 53 43 96 96 96H352c53 0 96-43 96-96V320c0-17.7-14.3-32-32-32s-32 14.3-32 32v96c0 17.7-14.3 32-32 32H96c-17.7 0-32-14.3-32-32V160c0-17.7 14.3-32 32-32h96c17.7 0 32-14.3 32-32s-14.3-32-32-32H96z" />
				</svg>
			</a>
			@*@Html.ActionLink("Edit", "Edit", new { id = item.MaSP }) |
			@Html.ActionLink("Details", "Details", new { id = item.MaSP }) |
			@Html.ActionLink("Delete", "Delete", new { id = item.MaSP })*@
		</td>
	</tr>
}

</table>
