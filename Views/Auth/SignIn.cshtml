
@{
	ViewBag.Title = "SignIn";
}

@section Styles {
	<link href="~/Content/styles/dangnhap.css" rel="stylesheet" type="text/css" />
}


<div class="login-page">
	<div class="main">
		<div class="title">ĐĂNG NHẬP</div>
		@using (Html.BeginForm("SignIn", "Auth", FormMethod.Post))
		{
			<input type="text" name="user" placeholder="Tài khoản" />
			<input type="password" name="pass" placeholder="Mật khẩu" />
			<input type="submit" value="Gửi" />
		}
		<div class="signup">
			Chưa có tài khoản?
			@Html.ActionLink("Đăng ký ngay", "Create", "KhachHangs")
		</div>
		<div class="error">@ViewBag.ErrorMsg</div>
	</div>
</div>
